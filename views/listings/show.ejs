<% layout("/layouts/boilerplate") %>

   <div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listing Details :</h3>
   </div>

      <div class="card col-6 offset-3">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body" id="id1">
          <p class="card-text">
          <b><li><%= listing.title %></li></b>
          <%= listing.description %>
          <br> &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
          <%= listing.location %><br>
          <%= listing.country %>
          </p>
        </div>
      </div>



    <div class="btns mb-5 ">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>         
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark  offset-5 " >Delete</button>
      </form>
   
    </div>  

    <div class="col-8 offset-3 mg-3">
      <hr />
      <h4>Leave a Review</h4>
      <form action="/listings/<%=listing.id %>/reviews" method="POST">
        <div class="mb-3 mt-3 ">
          <label for="rating">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment">Comments</label>
          <textarea  id="comment" name="review[comment]" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>

    </div>



</div>

